package LinkedListbassic;

public class LinkedListPrint {
    static class Node {
        int data;
        Node next;

        Node(int data) {
            this.data = data;
        }
    }
    static Node oddEvenList(Node head) {
        if (head == null) {
            return null;
        }
        Node cur = head;
        Node even=new Node(-1);
        Node odd=new Node(-1);
        Node oddTail=odd;
        Node evenTail=even;
        while (cur != null) {
            if(cur.data%2!=0) {
                oddTail.next=cur;
                oddTail=oddTail.next;
            }else{
                evenTail.next=cur;
                evenTail=evenTail.next;
            }
            cur=cur.next;
        }
        evenTail.next=null;
        oddTail.next=even.next;


        return odd.next;

    }
    static void print(Node head) {
        while(head!=null){
            System.out.print(head.data+" ");
            head=head.next;
        }
        System.out.println();
    }


        public static void main(String[] args) {
            Node a = new Node(1);
            Node b = new Node(2);
            Node c = new Node(3);
            Node d = new Node(5);
            Node e = new Node(8);

            a.next = b;
            b.next = c;
            c.next = d;
            d.next = e;


            Node a1 = new Node(2);
            Node a2 = new Node(4);
            Node a3 = new Node(6);
            Node a4 = new Node(8);
            Node a5 = new Node(10);

            a1.next = a2;
            a2.next = a3;
            a3.next = a4;
            a4.next = a5;
     Node temp= oddEvenList(a);
     print(temp);

        }
    }
