package LinkedListbassic;

public class LinkedListPrint {
    static class Node {
        int data;
        Node next;

        Node(int data) {
            this.data = data;
        }
    }

    static class linkedList {
        Node head = null;
        Node tail = null;
       void insertAtBegin(int data) {
            Node temp = new Node(data);
            if (head == null) {
                head = tail = temp;
            }else{
                temp.next = head;
                head = temp;

            }
       }
      int getAtIdx(int idx) {
           Node temp = head;
           for(int i=1;i<=idx;i++){
               temp = temp.next;
           }
           return temp.data;
      }
        void display() {
            Node temp = head;
            while (temp != null) {
                System.out.print(temp.data + " ");
                temp = temp.next;
            }
            System.out.println();
        }
    }
    public static void main(String[] args) {
        linkedList list=new linkedList();
        list.insertAtBegin(1);
        list.insertAtBegin(2);
        list.insertAtBegin(3);
        list.insertAtBegin(4);

        list.display();
       System.out.println(list.getAtIdx(3));


    }
}
